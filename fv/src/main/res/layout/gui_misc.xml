<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="320dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/gui_misc_ib_load"
            android:layout_width="@dimen/gui_misc_button_size"
            android:layout_height="@dimen/gui_misc_button_size"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/graph_load_focus_item" />

        <ImageButton
            android:id="@+id/gui_misc_ib_save"
            android:layout_width="@dimen/gui_misc_button_size"
            android:layout_height="@dimen/gui_misc_button_size"
            android:layout_marginStart="3dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/graph_save_focus_item" />

        <ImageButton
            android:id="@+id/gui_misc_ib_capture"
            android:layout_width="@dimen/gui_misc_button_size"
            android:layout_height="@dimen/gui_misc_button_size"
            android:layout_marginStart="3dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/camera_focus_item" />

        <ImageButton
            android:id="@+id/gui_misc_ib_prefecture"
            android:layout_width="@dimen/gui_misc_button_size"
            android:layout_height="@dimen/gui_misc_button_size"
            android:layout_marginStart="3dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/preference" />
    </LinearLayout>

    <unicot.app.fractalvisualizer.view.SeekBarWithLabel
        android:id="@+id/gui_misc_sb_fps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:val_default="4.0"
        app:val_max="4.0"
        app:title="@string/graph_setting_framerate"
        android:padding="5dp">

    </unicot.app.fractalvisualizer.view.SeekBarWithLabel>

    <unicot.app.fractalvisualizer.view.SeekBarWithLabel
        android:id="@+id/gui_misc_sb_pov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:val_default="0.0"
        app:val_max="128.0"
        app:title="@string/graph_setting_povframe"
        app:is_int="true"
        app:is_value_visible="true"
        android:padding="5dp">

    </unicot.app.fractalvisualizer.view.SeekBarWithLabel>

</LinearLayout>